<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<display-name>Simple Servlet + REST Application</display-name>
<servlet>
  <servlet-name>simpleServlet</servlet-name>
    <servlet-class>servlet.AccueilPage</servlet-class>
  <load-on-startup>1</load-on-startup>
</servlet>
<servlet-mapping>
  <servlet-name>simpleServlet</servlet-name>
  <url-pattern>/miagebook</url-pattern>
</servlet-mapping>
    <servlet>
        <servlet-name>signupServlet</servlet-name>
        <servlet-class>servlet.SignupPage</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>signupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>signinServlet</servlet-name>
        <servlet-class>servlet.LoginPage</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>signinServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>profileServlet</servlet-name>
        <servlet-class>servlet.ProfilePage</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>profileServlet</servlet-name>
        <url-pattern>/profilepage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>friendServlet</servlet-name>
        <servlet-class>servlet.FriendsPage</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>friendServlet</servlet-name>
        <url-pattern>/friend</url-pattern>
    </servlet-mapping>
</web-app>
